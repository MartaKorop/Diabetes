{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <div class="mdl-card form--reset">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text form--title">{{ title }}</h2>
            </div>
            <form autocomplete="off" method="POST" class="mdl-card__form" action="/reset-password/{{ token }}">
                <!--input type="hidden" name="token" value="token">
                <input type="hidden" name="email" value="email"-->

                <div class="mdl-grid">

                    <div class="mdl-cell--12-col">
                        <div class="mdl-card__supporting-text">
                            Enter a new password for your account.
                        </div>
                    </div>

                    <div class="mdl-cell--12-col">
                        <div class="mdl-textfield--floating-label mdl-textfield mdl-js-textfield ">
                            <input value="" autocomplete="new-password" class="mdl-textfield__input" name="password" type="password" id="password" data-required>
                            <label class="mdl-textfield__label" for="password">New password...</label>
                            <span class="mdl-textfield__error">Invalid password!</span>
                        </div>
                    </div>

                    <div class="mdl-cell--12-col">
                        <div class="mdl-textfield--floating-label mdl-textfield mdl-js-textfield">
                            <input value="" autocomplete="new-password" class="mdl-textfield__input" name="confirmPassword" type="password" id="confirmPassword" data-required>
                            <label class="mdl-textfield__label" for="confirmPassword">Confirm password...</label>
                            <span class="mdl-textfield__error">Invalid confirm password!</span>
                        </div>
                    </div>

                    <div class="mdl-cell--12-col mdl-cell--action">
                        <button class="mdl-button mdl-js-button" type="submit">Reset password</button>
                        <a href="#"  onclick="window.history.back();" class="mdl-button mdl-js-button mdl-button--second">Cancel</a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

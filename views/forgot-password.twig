{% extends 'layout.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="mdl-card form--forgot">
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text form--title">{{ title }}</h2>
                </div>
                <form autocomplete="off" method="POST" class="mdl-card__form" action="/forgot-password">
                    <div class="mdl-grid">

                        <div class="mdl-cell--12-col">
                            <div class="mdl-textfield--floating-label mdl-textfield mdl-js-textfield">
                                <input value="" autocomplete="new-password" class="mdl-textfield__input" name="email" type="email" id="email" data-required>
                                <label class="mdl-textfield__label" for="email">Email...</label>
                                <span class="mdl-textfield__error">Invalid email!</span>
                                <i class="material-icons mdl-textfield__label__icon">error</i>
                            </div>
                        </div>

                        <!--div class="mdl-cell--12-col">
                            <div class="mdl-textfield__error">
                                <span >message</span>
                            </div>
                        </div-->

                        <div class="mdl-cell--12-col mdl-cell--action">
                            <button class="mdl-button mdl-js-button" type="submit">Send email</button>
                            <a href="#"  onclick="window.history.back();" class="mdl-button mdl-js-button mdl-button--second">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
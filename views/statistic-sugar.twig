{% extends 'layout.twig' %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <h1>{{ title }}</h1>
            <div class="mdl-grid">
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/data/7">7 days</a>
                    </button>
                </div>
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/data/14">14
                            days</a></button>
                </div>
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/data/30">30
                            days</a></button>
                </div>
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/data/90">90
                            days</a></button>
                </div>
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/line">Statistic</a>
                    </button>
                </div>
                <div class="mdl-cell--2-col mdl-cell--action">
                    <button class="mdl-button mdl-js-button" type="button"><a href="/statistic/sugar/doughnut">Distribution</a>
                    </button>
                </div>
            </div>


            <div class="mdl-grid">
                <div class="mdl-cell--12-col">
                    <div class="mdl-card form" style="margin: 24px auto 16px auto">
                        <div class="mdl-card__title">
                            <h2 class="mdl-card__title-text form--title">Min value</h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <strong>Value:</strong> {{ min[0].sugar_level }} mmol/L
                        </div>
                        {% for val in min %}
                            <div class="mdl-card__supporting-text">
                                <strong>Date:</strong> {{ val.time|date('d-m-Y H:i') }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="mdl-cell--12-col">
                    <div class="mdl-card form" style="margin: 0px auto 16px auto">
                        <div class="mdl-card__title">
                            <h2 class="mdl-card__title-text form--title">Max value</h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <strong>Value:</strong> {{ max[0].sugar_level }} mmol/L
                        </div>

                        {% for val in max %}
                            <div class="mdl-card__supporting-text">
                                <strong>Date:</strong> {{ val.time|date('d-m-Y H:i') }}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="mdl-cell--12col">
                    <div class="mdl-card form" style="margin: 0px auto 16px auto">
                        <div class="mdl-card__title">
                            <h2 class="mdl-card__title-text form--title">Average value </h2>
                        </div>
                        <div class="mdl-card__supporting-text">
                            <strong>Value:</strong> {{ avg.avg|round(1, 'floor') }} mmol/L
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

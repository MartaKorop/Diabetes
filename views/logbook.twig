{% extends 'layout.twig' %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <h1>{{ title }}</h1>
        <div class="mdl-grid">
            <div class="mdl-cell--3-col mdl-cell--action">
                <button class="mdl-button mdl-js-button" type="button"><a href="/logbook/7">7 days</a></button>
            </div>
            <div class="mdl-cell--3-col mdl-cell--action">
                <button class="mdl-button mdl-js-button" type="button"><a href="/logbook/14">14 days</a></button>
            </div>
            <div class="mdl-cell--3-col mdl-cell--action">
                <button class="mdl-button mdl-js-button" type="button"><a href="/logbook/30">30 days</a></button>
            </div>
            <div class="mdl-cell--3-col mdl-cell--action">
                <button class="mdl-button mdl-js-button" type="button"><a href="/logbook/90">90 days</a></button>
            </div>
        </div>
        {% if result %}
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>&nbsp;</th>
                    <th>Value</th>
                    <th>
                        <a href="/log/add"><i class="material-icons">add_box</i></a>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for value in result %}
                    <tr>
                        <td>{{ value.date }}</td>
                        <td>{{ value.time }}</td>
                        {% if value.type == 'glucose' %}
                            <td><img src="/images/sugar-blood-level.png" alt="sugar-blood-level.png"></td>
                            <td>{{ value.value }} mmol/L</td>
                        {% else %}
                            <td><img src="/images/injection.png" alt="injection.png"></td>
                            <td>{{ value.value }} U</td>
                        {% endif %}
                        <td>{{ value.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>You still have not any log entry! Please, press the button to add log entry.</div>
            <a href="/log/add"><i class="material-icons">add_box</i></a>
        {% endif %}
        {% endblock %}
    </div>
</div>

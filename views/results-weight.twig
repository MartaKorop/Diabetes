{% extends 'layout.twig' %}

{% block body %}

<div class="container">
    <div class="row justify-content-center">
        <h1>{{ title }}</h1>
        {% if result %}
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Value</th>
                    <th>
                        <a href="/weight/add"><i class="material-icons">add_box</i></a>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for value in result %}
                    <tr>
                        <td>{{ value.time|date('d.m.Y') }}</td>
                        <td>{{ value.weight }} kg</td>
                        <td><a href="/weight/edit/{{ value.weight_id }}"><i class="material-icons">edit</i></a>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div>You still have not any weight entry! Please, press the button to add weight entry.</div>
            <a href="/weight/add"><i class="material-icons">add_box</i></a>
        {% endif %}
        {% endblock %}
    </div>
</div>
